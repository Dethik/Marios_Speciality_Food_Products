
<%= form_for [ @product ] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <br>
  <%= f.submit %>
<% end %>

<div class="product-error">
  <%= render "layouts/errors", :object => @product %>
</div>