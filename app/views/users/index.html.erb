<h1>Stocked Users</h1>

<% if @users.any? %>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to user.name, user_path(user) %></li>
    <% end %>
  </ul>
<% else %>
  <p>Sorry, there are no users in the pantry.</p>
<% end %>
<div class="form-container">
  <h1>Add New Users!</h1>
  <div class="form">
    <%= form_for @user do |f| %>
      <%= f.label "New User" %>
      <%= f.text_field :name, class: "form-control", require: "true" %>
      <%= f.submit class: "submit" %>
    <% end %>
  </div>
</div>

<p><%= link_to "Return to the Produce", products_path %></p>